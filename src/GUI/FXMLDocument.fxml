<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="210" prefWidth="360"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="GUI.FXMLDocumentController">
    <children>

        <Label layoutX="100" layoutY="10" text="Выберете файл формата .wav " textFill="#fcfcfc"/>
        <Button fx:id="button_select" layoutX="100.0" layoutY="30.0" onAction="#open" prefHeight="40.0" prefWidth="69.0"
                text="Open"/>
        <Button fx:id="buttonClose" layoutX="190" layoutY="30" maxWidth="110" onAction="#clickClose"
                prefHeight="40.0" prefWidth="69.0" text="Close"/>

        <Label layoutX="125" layoutY="90" text="Панель управления" textFill="#fefefe"/>
        <Button fx:id="button_play" layoutX="70" layoutY="120.0" onAction="#play" prefHeight="40.0" prefWidth="60.0"/>
        <Button fx:id="button_pause" layoutX="150" layoutY="120.0" onAction="#pause" prefHeight="40.0" prefWidth="60.0"/>
        <Button fx:id="button_stop" layoutX="230" layoutY="120.0" onAction="#stop" prefHeight="40.0" prefWidth="60.0"/>

        <CheckBox layoutX="130" layoutY="175.0" onAction="#filterBox" text="ФНЧ БИХ" textFill="#fefefe" />

    </children>
</AnchorPane>
